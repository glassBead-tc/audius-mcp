{
  "name": "@glassbead/mcp-audius",
  "version": "1.0.0",
  "description": "MCP server for Audius API integration - access Audius API endpoints through the Model Context Protocol",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-audius": "./build/index.js"
  },
  "files": [
    "build",
    "README.md",
    ".githooks",
    "CONTRIBUTING.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glassBead-tc/audius-mcp.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "audius",
    "api",
    "music",
    "streaming"
  ],
  "author": "glassBead",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/glassBead-tc/audius-mcp/issues"
  },
  "homepage": "https://github.com/glassBead-tc/audius-mcp#readme",
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "tsc -w",
    "postinstall": "cp .githooks/* .git/hooks/ && chmod +x .git/hooks/*"
  },
  "dependencies": {
    "@audius/fixed-decimal": "^1.0.0",
    "@audius/sdk": "^8.0.1",
    "@modelcontextprotocol/sdk": "^1.4.1",
    "@solana/web3.js": "^1.91.0",
    "dotenv": "^16.4.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  }
}
